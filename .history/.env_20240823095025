# General application settings
NODE_ENV=development          # Set to 'production' for production environment
PORT=3000                     # Port on which the application will run

# Database configuration
DB_HOST=localhost             # Database host
DB_PORT=5432                  # Database port (default for PostgreSQL)
DB_USER=myuser                # Database username
DB_PASSWORD=mypassword        # Database password
DB_NAME=mydatabase            # Database name

# API keys and third-party services
API_KEY=your_api_key_here     # API key for a third-party service
SECRET_KEY=your_secret_key    # Secret key for JWT or other cryptographic purposes

# Redis configuration (if using Redis)
REDIS_HOST=localhost          # Redis host
REDIS_PORT=6379               # Redis port

# Cloud storage configuration (if applicable)
AWS_ACCESS_KEY_ID=your_access_key_id       # AWS access key ID
AWS_SECRET_ACCESS_KEY=your_secret_access_key  # AWS secret access k
